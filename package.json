{
  "name": "chess-application",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "start:be": "cd apps/be && bun run index.ts",
    "start:ws-server": "cd apps/ws-server && bun run index.ts",
    "start:web": "cd apps/web && bun run start",
    "db:generate": "cd packages/db && bunx prisma generate"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.2.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
